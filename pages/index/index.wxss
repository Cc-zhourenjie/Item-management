/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 24rpx;
  box-sizing: border-box;
}

/* 全部卡片宽度自适应且统一 */
l-card {
  display: block;
  width: 100%;
  box-sizing: border-box;
  margin-left: 0;
  margin-right: 0;
  margin-bottom: 24rpx;
}

l-card:last-of-type {
  margin-bottom: 0;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}
.photo-placeholder {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx dashed #c8c8c8;
  border-radius: 12rpx;
  background: #f5f5f5;
}
.name-input {
  flex: 1;
}

.row-inline {
  display: flex;
  align-items: center;
}
.ml8 {
  margin-left: 16rpx;
}
.suffix {
  margin-left: 16rpx;
  color: #666;
}

/* Hide LinUI input internal underline to keep consistent width */
.hide-row {
  display: none !important;
}

.date-display {
  padding: 20rpx;
  border: 1px solid #e5e5e5;
  border-radius: 8rpx;
  color: #666;
}

.sub-title {
  color: #888;
  margin-bottom: 16rpx;
}

.row-actions {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}
