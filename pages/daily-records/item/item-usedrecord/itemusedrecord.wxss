/* pages/daily-records/item/item-usedrecord/itemusedrecord.wxss */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0;
}

/* 搜索和筛选区域 */
.search-section {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  align-items: center;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.filter-btn,
.search-btn {
  height: 80rpx;
  padding: 0 30rpx;
  background-color: #ff6b6b;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

/* 按钮样式重置，去除小程序默认边框与背景 */
.filter-btn::after,
.search-btn::after,
.nav-btn::after {
  border: none;
}

.filter-btn,
.search-btn,
.nav-btn {
  background-image: none;
}

/* 日历导航 */
.calendar-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background-color: #fff;
  margin: 0 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #ff9500;
  color: #fff;
  border: none;
  border-radius: 50%;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.month-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 日历容器 */
.calendar-container {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 20rpx 20rpx 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 星期标题 */
.week-header {
  display: flex;
  margin-bottom: 10rpx;
}

.week-day {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 0;
  font-weight: bold;
}

.week-day.weekend {
  color: #ff6b6b;
}

/* 日历网格 */
.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 8rpx 0;
}

.calendar-day {
  width: 14.2857%;
  min-height: 120rpx;
  padding: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  box-sizing: border-box;
}

.calendar-day.current-month {
  background-color: #fff;
}

.calendar-day.other-month {
  background-color: #f8f8f8;
  color: #ccc;
}

.calendar-day.today {
  background-color: #fff3cd;
}

.calendar-day.selected {
  /* outline: 3rpx solid #4e73df;
  border-radius: 12rpx; */
  background-color: #ffe69c;
}

/* 有记录的日期格子更高一些 */
.calendar-day.has-records {
  min-height: 160rpx;
}

.calendar-day.weekend .day-number {
  color: #ff6b6b;
}

.day-number {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.day-records {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.record-tag {
  background-color: #e8f5e8;
  border-radius: 8rpx;
  padding: 4rpx 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 18rpx;
  line-height: 1.2;
}

.record-name {
  color: #333;
  font-size: 18rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.record-amount {
  color: #666;
  font-size: 16rpx;
}

.more-records {
  font-size: 16rpx;
  color: #999;
  text-align: center;
  margin-top: 4rpx;
}

.no-records {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

/* 列表头部 */
.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.total-amount {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 使用记录列表 */
.records-list {
  flex: 1;
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  max-height: 600rpx;
}

/* pages/daily-records/item/item-list/itemlist.wxss */

/* 原生卡片容器样式 */
.native-card-container {
  padding: 20rpx;
}

/* 原生卡片样式 - 仿照 van-card */
.native-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

/* 卡片内容布局 */
.card-content {
  display: flex;
  padding: 20rpx;
  align-items: flex-start;
}

/* 商品图片样式 */
.card-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 商品信息区域 */
.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx;
}

/* 商品标题 */
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  line-height: 1.4;
  margin-bottom: 8rpx;
  white-space: normal;
  word-break: break-word;
  overflow: visible;
}

/* 商品描述 */
.card-desc {
  font-size: 26rpx;
  color: #969799;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
}

/* 状态色 */
.text-red {
  color: #e11d48;
}

.text-green {
  color: #16a34a;
}