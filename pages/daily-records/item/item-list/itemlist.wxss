/* pages/daily-records/item/item-list/itemlist.wxss */

/* 原生卡片容器样式 */
.native-card-container {
  padding: 20rpx;
}

/* 原生卡片样式 - 仿照 van-card */
.native-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

/* 卡片内容布局 */
.card-content {
  display: flex;
  padding: 20rpx;
  align-items: flex-start;
}

/* 商品图片样式 */
.card-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 商品信息区域 */
.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx;
}

/* 商品标题 */
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  line-height: 1.4;
  margin-bottom: 8rpx;
  white-space: normal;
  word-break: break-word;
  overflow: visible;
}

/* 商品描述 */
.card-desc {
  font-size: 26rpx;
  color: #969799;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 卡片底部信息 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

/* 价格样式 */
.card-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b35;
}

/* 数量样式 */
.card-num {
  font-size: 24rpx;
  color: #969799;
  background: #f7f8fa;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 卡片内右下角编辑按钮组 */
.card-actions {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  gap: 16rpx;
}

.card-action {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
  background: linear-gradient(135deg, #4e73df, #6f9cf7);
  color: #fff;
}

.card-action:active {
  transform: scale(0.96);
  opacity: 0.95;
}

.card-action-icon {
  font-size: 30rpx;
  font-weight: 700;
}

.action-edit { background: linear-gradient(135deg, #ff8a5b, #ff6b35); }
.action-add  { background: linear-gradient(135deg, #22c55e, #16a34a); }

/* 悬浮按钮组 */
.fab-group {
  position: fixed;
  right: 32rpx;
  bottom: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 999;
}

.fab-button {
  width: 104rpx;
  height: 104rpx;
  border-radius: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  background: linear-gradient(135deg, #4e73df, #6f9cf7);
  color: #fff;
}

.fab-button:active {
  transform: scale(0.96);
  opacity: 0.95;
}

.fab-icon {
  font-size: 48rpx;
  font-weight: 700;
}

/* 不同语义按钮可定义不同渐变色 */
.fab-edit {
  background: linear-gradient(135deg, #ff8a5b, #ff6b35);
}

.fab-add {
  background: linear-gradient(135deg, #22c55e, #16a34a);
}

/* 状态色 */
.text-red { color: #e11d48; }
.text-green { color: #16a34a; }

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  width: 600rpx;
  max-width: 90%;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  text-align: center;
}

/* 剩余信息样式 */
.remaining-info {
  font-size: 24rpx;
  color: #969799;
  text-align: center;
  padding: 16rpx 32rpx;
  background: #f7f8fa;
  margin: 0 32rpx;
  border-radius: 8rpx;
}

.modal-body {
  padding: 40rpx 32rpx;
}

/* 数量输入容器 */
.number-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

/* 加减号按钮 */
.number-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #c084fc, #e0a7ff);
  box-shadow: 0 4rpx 12rpx rgba(192, 132, 252, 0.4);
}

.number-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.number-minus {
  background: linear-gradient(135deg, #c084fc, #e0a7ff);
  box-shadow: 0 4rpx 12rpx rgba(192, 132, 252, 0.4);
}

/* 数量输入框 */
.number-input {
  width: 120rpx;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  background: #fff;
  box-sizing: border-box;
}

.number-input:focus {
  border-color: #4e73df;
  outline: none;
}

/* 单位文本框 */
.number-unit {
  font-size: 28rpx;
  color: #646566;
  background: #f7f8fa;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  min-width: 80rpx;
  text-align: center;
  font-weight: 500;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn-use {
  background: #f7f8fa;
  color: #646566;
}

.modal-btn-use:active {
  background: #e8e8e8;
}

.modal-btn-open {
  background: linear-gradient(135deg, #c084fc, #e0a7ff);
  color: #fff;
}

.modal-btn-open:active {
  opacity: 0.9;
}

.modal-btn-use {
  background: linear-gradient(135deg, #10b981, #34d399);
  color: #fff;
}

.modal-btn-use:active {
  opacity: 0.9;
}