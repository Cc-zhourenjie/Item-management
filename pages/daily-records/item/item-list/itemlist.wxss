/* pages/daily-records/item/item-list/itemlist.wxss */

/* 原生卡片容器样式 */
.native-card-container {
  padding: 20rpx;
}

/* 原生卡片样式 - 仿照 van-card */
.native-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

/* 卡片内容布局 */
.card-content {
  display: flex;
  padding: 20rpx;
  align-items: flex-start;
}

/* 商品图片样式 */
.card-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 商品信息区域 */
.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx;
}

/* 商品标题 */
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  line-height: 1.4;
  margin-bottom: 8rpx;
  white-space: normal;
  word-break: break-word;
  overflow: visible;
}

/* 商品描述 */
.card-desc {
  font-size: 26rpx;
  color: #969799;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 卡片底部信息 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

/* 价格样式 */
.card-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b35;
}

/* 数量样式 */
.card-num {
  font-size: 24rpx;
  color: #969799;
  background: #f7f8fa;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 卡片内右下角编辑按钮组 */
.card-actions {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  gap: 16rpx;
}

.card-action {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
  background: linear-gradient(135deg, #4e73df, #6f9cf7);
  color: #fff;
}

.card-action:active {
  transform: scale(0.96);
  opacity: 0.95;
}

.card-action-icon {
  font-size: 30rpx;
  font-weight: 700;
}

.action-edit { background: linear-gradient(135deg, #ff8a5b, #ff6b35); }
.action-add  { background: linear-gradient(135deg, #22c55e, #16a34a); }

/* 悬浮按钮组 */
.fab-group {
  position: fixed;
  right: 32rpx;
  bottom: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 999;
}

.fab-button {
  width: 104rpx;
  height: 104rpx;
  border-radius: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  background: linear-gradient(135deg, #4e73df, #6f9cf7);
  color: #fff;
}

.fab-button:active {
  transform: scale(0.96);
  opacity: 0.95;
}

.fab-icon {
  font-size: 48rpx;
  font-weight: 700;
}

/* 不同语义按钮可定义不同渐变色 */
.fab-edit {
  background: linear-gradient(135deg, #ff8a5b, #ff6b35);
}

.fab-add {
  background: linear-gradient(135deg, #22c55e, #16a34a);
}

/* 状态色 */
.text-red { color: #e11d48; }
.text-green { color: #16a34a; }