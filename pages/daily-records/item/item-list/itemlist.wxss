/* pages/daily-records/item/item-list/itemlist.wxss */

/* 原生卡片容器样式 */
.native-card-container {
  padding: 20rpx;
}

/* 原生卡片样式 - 仿照 van-card */
.native-card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 卡片内容布局 */
.card-content {
  display: flex;
  padding: 20rpx;
  align-items: flex-start;
}

/* 商品图片样式 */
.card-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 商品信息区域 */
.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 160rpx;
}

/* 商品标题 */
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
  line-height: 1.4;
  margin-bottom: 8rpx;
  white-space: normal;
  word-break: break-word;
  overflow: visible;
}

/* 商品描述 */
.card-desc {
  font-size: 26rpx;
  color: #969799;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 卡片底部信息 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

/* 价格样式 */
.card-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b35;
}

/* 数量样式 */
.card-num {
  font-size: 24rpx;
  color: #969799;
  background: #f7f8fa;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}