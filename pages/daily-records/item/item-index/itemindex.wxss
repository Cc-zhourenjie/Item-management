/* pages/daily-records/item/item-index/itemindex.wxss */

.scrollarea {
  height: 100vh;
  background-color: #f5f5f5;
}

.grid {
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.grid:first-child {
  margin-top: 40rpx;
}

.grid:not(:last-child) {
  margin-bottom: 30rpx;
}

.text {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}

